set nocompatible
syntax on
filetype on
filetype plugin on
colorscheme desert
set number
set scrolloff=6
set tabstop=4
set shiftwidth=4
set smarttab
set history=1024
set smartindent
set autoindent
set nocursorline
"自动切换当前目录为当前文件所在目录
set autochdir
"搜索时忽略大小写，存在大写时大小写敏感
set ignorecase
set smartcase

set incsearch
set hlsearch

"显示状态栏
set laststatus=2

set showmatch
